{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
<div class="container">
    <h1>Mon panier</h1>

<ul class="list-group">
    {% for product in data.products %}
        <li class="list-group-item d-flex justify-content-between align-items-center">
            {{product.title}}
            <span class="badge bg-primary rounded-pill-pill">{{data.qt[loop.index -1]}}</span>
        </li>
        {# <p>{{product.title}}</p>
        {{dump(data.qt[loop.index -1])}} #}
    {% endfor %}
</ul>
</div>
{% endblock %}
